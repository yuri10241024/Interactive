        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interactive_moive"
        WindowStyle="None"
        WindowState="Maximized"
        mc:Ignorable="d"
        Title="AboutUs" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*">
                
            </ColumnDefinition>

            <ColumnDefinition Width="1700">
                
            </ColumnDefinition>

            <ColumnDefinition Width="*">
                
            </ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            
            <RowDefinition Height="*">
                
            </RowDefinition>
            
            <RowDefinition Height="50">
                
            </RowDefinition>
            
        </Grid.RowDefinitions>

        <StackPanel Orientation='Horizontal' HorizontalAlignment="Center" Grid.Column="1">
            <TextBlock FontWeight="Medium" FontFamily="Century Gothic" Name="TBAboutUs" Foreground="DarkGray" FontSize="40"></TextBlock>
