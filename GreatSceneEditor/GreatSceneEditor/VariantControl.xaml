<UserControl x:Class="GreatSceneEditor.VariantControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreatSceneEditor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
        <CheckBox Name="CBTurnOn" Click="CBTurnOn_Click" IsChecked="True" Checked="CBTurnOn_Checked"></CheckBox>
        <TextBlock x:Name ="TBVariantNum"  Width="150" Margin="0,0,10,0" Text="Вариант n: "></TextBlock>
        <TextBox Name="TBID"  Text="Ведите индекс"></TextBox>
        <TextBox Name="TBDescription"  Text="Ведите описание"></TextBox>
        <ComboBox Name="CBVariants" Width="100" DisplayMemberPath="TypeName"></ComboBox>
    </StackPanel>
    
</UserControl>
